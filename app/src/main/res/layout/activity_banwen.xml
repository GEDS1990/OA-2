<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/bwlc_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="编号"/>

            <TextView
                android:id="@+id/bianhao"
                style="@style/WorkInfoRightTextView"
                android:hint="请点击获取（必填）"
                android:tag="0"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/icon_official_number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="来文单位"/>

            <EditText
                android:id="@+id/danwei_danwei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入来文单位名称（必填）"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="2"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="文件标题"/>

            <EditText
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入文件标题（必填）"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="2"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="备注"/>

            <EditText
                android:id="@+id/beizhu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入备注内容（必填）"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="5"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_fujian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13"
            android:tag="0">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="附件"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_official_enclosure"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_fujian"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_13"
                android:src="@drawable/icon_official_excel"
                />

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_toRightOf="@id/icon"
                android:text="合同原件. excel"/>

            <TextView
                android:id="@+id/filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_name"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/icon"
                android:text="3.45M"/>

            <!---->
            <ImageView
                android:id="@+id/btn_uplaod"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/upload"/>

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_official_del"
                android:visibility="gone"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_caogao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_blank"
            android:text="保存草稿"
            android:textColor="@color/blue3"/>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_shape"
            android:text="提交数据"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

    </LinearLayout>

</RelativeLayout>