<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">
                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="请假人"/>

                <TextView
                    android:id="@+id/qingjia_name"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">
                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="申请部门"/>

                <TextView
                    android:id="@+id/qingjia_bumen"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fangshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13"
                android:visibility="gone">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="请假方式"/>

                <TextView
                    android:id="@+id/qingjia_fangshi"
                    style="@style/WorkInfoRightTextView"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/arrow_right_gray2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_leixing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="请假类型"/>

                <TextView
                    android:id="@+id/qingjia_type"
                    style="@style/WorkInfoRightTextView"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/arrow_right_gray2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="开始时间"/>

                <TextView
                    android:id="@+id/qingjia_start"
                    style="@style/WorkInfoRightTextView"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/arrow_right_gray2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="结束时间"/>

                <TextView
                    android:id="@+id/qingjia_stop"
                    style="@style/WorkInfoRightTextView"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/arrow_right_gray2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="请假时长(天)"/>

                <EditText
                    android:id="@+id/qingjia_tianshu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入请假时长(必填)"
                    android:inputType="number|numberDecimal"
                    android:singleLine="true"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="请假事由"/>

                <EditText
                    android:id="@+id/qingjia_shiyou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入请假事由(必填)"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="6"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/ll_fenguanleader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择分管领导审核"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/tv_fenguanleader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_reimbursement_mail"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="是否通过部长审核"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/tv_buzhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择（必填）"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
