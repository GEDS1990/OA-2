<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="发稿人"/>

            <TextView
                android:id="@+id/name"
                style="@style/WorkInfoRightTextView"
                android:hint=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="发稿部门"/>

            <TextView
                android:id="@+id/fagao_bumen"
                style="@style/WorkInfoRightTextView"
                android:hint=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="发稿时间"/>

            <TextView
                android:id="@+id/date"
                style="@style/WorkInfoRightTextView"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/arrow_right_gray2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="新闻标题"/>

            <EditText
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入新闻标题（必填）"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="7"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_fujian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13"
            android:tag="0">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="附件"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_official_enclosure"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_fujian"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_13"
                android:src="@drawable/unknow_type"
                />

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_toRightOf="@id/icon"/>

            <TextView
                android:id="@+id/filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_name"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/icon"/>

            <!---->
            <ImageView
                android:id="@+id/btn_uplaod"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/upload"
                android:tag="0"/>

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_official_del"
                android:visibility="gone"/>
        </RelativeLayout>

        <!--<LinearLayout-->
            <!--android:id="@+id/ll_fenguanleader"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="1dp"-->
            <!--android:background="@color/white"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal"-->
            <!--android:padding="@dimen/dp_13">-->

            <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:text="选择分管领导审核"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/dp_15"/>-->

            <!--<TextView-->
                <!--android:id="@+id/tv_fenguanleader"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="15dp"/>-->

            <!--<ImageView-->
                <!--android:layout_width="16dp"-->
                <!--android:layout_height="16dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@drawable/icon_reimbursement_mail"/>-->
        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/txtProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue5"
            android:layout_marginTop="10dp"
            android:padding="@dimen/dp_10"
            android:text="流程审核记录"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <com.lsh.XXRecyclerview.XXRecycleView
            android:id="@+id/xxreProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_caogao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_blank"
            android:text="保存草稿"
            android:textColor="@color/blue3"/>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_shape"
            android:text="提交数据"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/webView"
            android:visibility="gone"/>
    </FrameLayout>
</RelativeLayout>