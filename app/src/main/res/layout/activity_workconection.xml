<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="发起部门"/>

            <TextView
                android:id="@+id/bumen"
                style="@style/WorkInfoRightTextView"
                android:hint=""/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/gzlx_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13"
            >

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="编号"/>

            <TextView
                android:id="@+id/bianhao"
                style="@style/WorkInfoRightTextView"
                android:hint="请点击获取（必填）"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/icon_official_number"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xiangmu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13"
            android:tag="0">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="项目负责人"/>

            <TextView
                android:id="@+id/xiangmu_fuzeren"
                style="@style/WorkInfoRightTextView"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/icon_reimbursement_mail"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13"
            android:tag="0">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="部门负责人"/>

            <TextView
                android:id="@+id/bumen_fuzeren"
                style="@style/WorkInfoRightTextView"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/icon_reimbursement_mail"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_worklianxiren"
            style="@style/WorkInfoLinearLayout"
            android:tag="0">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="工作联系人"/>

            <TextView
                android:id="@+id/lianxiren"
                style="@style/WorkInfoRightTextView"/>

            <ImageView
                style="@style/WorkInfoRightArrow"
                android:src="@drawable/icon_reimbursement_mail"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_13">

            <TextView
                style="@style/WorkInfoLeftTextView"
                android:text="发起事由："/>

            <EditText
                android:id="@+id/qingjia_shiyou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入发起事由（必填）"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="7"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

