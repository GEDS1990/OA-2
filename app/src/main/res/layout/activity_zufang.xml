<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="合同名称"/>

                <EditText
                    android:id="@+id/hetong_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入合同名称（必填）"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:singleLine="true"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fwzl_bianhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="合同编号"/>

                <TextView
                    android:id="@+id/bianhao"
                    style="@style/WorkInfoRightTextView"
                    android:hint="请点击获取（必填）"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/icon_official_number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="主办部门"/>

                <TextView
                    android:id="@+id/bumen"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="主办人"/>

                <TextView
                    android:id="@+id/zhubanren"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray5"
                android:padding="10dp"
                android:text="签约主体"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="甲"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/name_jia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入甲方（必填）"
                    android:textSize="@dimen/dp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乙"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/name_yi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入乙方（必填）"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/WorkInfoLeftTextView"
                    android:text="洽谈时间"/>

                <TextView
                    android:id="@+id/date"
                    style="@style/WorkInfoRightTextView"
                    android:hint="请点击获取（必填）"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/arrow_right_gray2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="洽谈地点"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入洽谈地点（必填）"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="2"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="合同内容"/>

                <EditText
                    android:id="@+id/main_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入合同主要内容（必填）"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="7"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue5"
                android:layout_marginTop="10dp"
                android:padding="@dimen/dp_10"
                android:text="流程审核记录"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <com.lsh.XXRecyclerview.XXRecycleView
                android:id="@+id/xxreProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_caogao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_blank"
            android:text="保存草稿"
            android:textColor="@color/blue3"/>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_blue_shape"
            android:text="提交数据"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

    </LinearLayout>

</RelativeLayout>