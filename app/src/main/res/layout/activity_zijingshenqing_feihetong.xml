<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="经办人"/>

                <TextView
                    android:id="@+id/name"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="申请部门"/>

                <TextView
                    android:id="@+id/bumen"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/zjsqfht_bianhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="资金申请编号"/>

                <TextView
                    android:id="@+id/bianhao"
                    style="@style/WorkInfoRightTextView"
                    android:hint="请点击获取（必填）"/>

                <ImageView
                    style="@style/WorkInfoRightArrow"
                    android:src="@drawable/icon_official_number"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="支付类别"/>

                <TextView
                    android:id="@+id/payType"
                    style="@style/WorkInfoRightTextView"
                    android:hint=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="申请金额 (元）"/>

                <EditText
                    android:id="@+id/money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入申请金额（必填）"
                    android:maxLines="3"
                    android:textSize="@dimen/dp_15"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="申请事由"/>

                <EditText
                    android:id="@+id/reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入申请事由（必填）"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="6"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_13">

                <TextView
                    style="@style/WorkInfoLeftTextView"
                    android:text="申请内容"/>

                <EditText
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入申请内容（必填）"
                    android:maxLines="3"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:id="@+id/ll_fenguanleader"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="10dp"-->
